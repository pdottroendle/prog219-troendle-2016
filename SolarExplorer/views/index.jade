                    li(ng-class="{ active: isActive('/renewables/simple-format')}")
                        a(ng-href='#/simple-format') Simple Format
                        
                    li(ng-class="{ active: isActive('/energy-types/energy-types')}")
                        a(ng-href='#/energy-types') Energy Types

                    li(ng-class="{ active: isActive('/energy-types/energy-selector')}")
                        a(ng-href='#/energy-selector') Energy Selector
                        
                    li(ng-class="{ active: isActive('/about')}")
