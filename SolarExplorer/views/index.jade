        .container
            navbar-header
                ul.nav.nav-pills
                    li(ng-class="{ active: isActive('/home')}")
                        a(ng-href='#/home') Home

                    li(ng-class="{ active: isActive('/renewables/renewables')}")
                        a(ng-href='#/renewables') Renewable

                    li(ng-class="{ active: isActive('/renewables/renewable-by-year')}")
